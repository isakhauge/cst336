<!DOCTYPE html>
<html lang="en">
    <head>

		<!-- Defualt meta data -->
        {{> head/default_meta }}

        <title>{{title}}</title>

        <!-- Google Fonts: -->
		{{#if font}}
			{{#each font}}
				<link rel="stylesheet" href="{{this.src}}" integrity="{{this.integrity}}" crossorigin="{{this.crossOrigin}}">
			{{/each}}
		{{else}}
			<!-- No custom fonts imported. -->
		{{/if}}

        <!-- Custom style: -->
		{{#if css}}
			{{#each css}}
				<link rel="stylesheet" href="{{this.src}}" integrity="{{this.integrity}}" crossorigin="{{this.crossOrigin}}">
			{{/each}}
		{{else}}
			<link rel="stylesheet" href="/stylesheets/style.css">
		{{/if}}

		<!-- Scripts: -->
		{{#if js}}
			{{#each js}}
				<script src="{{this.src}}" integrity="{{this.integrity}}" crossorigin="{{this.crossOrigin}}"></script>
			{{/each}}
		{{else}}
			<!-- No JS imported. -->
		{{/if}}
    </head>

    <body>
		{{{navbar}}}
		<main>
            {{{body}}}
        </main>
		{{> footer/default_footer }}
    </body>

</html>
